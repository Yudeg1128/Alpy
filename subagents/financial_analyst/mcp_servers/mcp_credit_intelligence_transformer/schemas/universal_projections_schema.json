    },
    "equity": {
      "items": {
        "common_stock": { "historical_account_key": null, "projection_model": "Share_Activity_Driven" },
        "retained_earnings": { "historical_account_key": null, "projection_model": "Retained_Earnings_Roll_Forward", "drivers": { "dividend_payout_ratio": { "baseline": 0.0, "justification": null, "trends": { "short_term": 0.0, "medium_term": 0.0, "terminal": 0.0 } } } }
      }
    }
  },

  "cash_flow_statement": {
    "__description__": "100% DERIVED. The engine calculates all values by analyzing changes in the Income Statement and Balance Sheet. The LLM only maps historicals for reconciliation."
  }
