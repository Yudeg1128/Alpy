{
  "__description__": "The definitive, self-documenting Master Financial Template. The engine is hardcoded to parse this exact structure. The JIT LLM's sole responsibility is to populate the 'historical_account_key' for mapping, select the appropriate 'projection_model', and provide all values for the fully-specified 'drivers' object for each line item, using the definitions provided herein.",

  "__schema_definitions__": {
    "drivers": {
      "description": "Defines the structure and meaning of the driver object used to control all projections.",
      "baseline": {
        "definition": "The starting value for the driver, to be applied in the first projection period (T+1). This value must be calculated or inferred from the provided historical data."
      },
      "justification": {
        "definition": "A mandatory, human-readable rationale explaining the choice of the baseline and trend values. This must reference the source data or context."
      },
      "trends": {
        "definition": "Defines the single, constant value the driver will take during each subsequent, hardcoded forecast horizon.",
        "structure": {
          "short_term": {
            "definition": "The value to be used for projection years 2 and 3."
          },
          "medium_term": {
            "definition": "The value to be used for projection years 4 through 9."
          },
          "terminal": {
            "definition": "The value to be used for all projection years from 10 onwards."
          }
        }
      }
    }
  },

  "income_statement": {
    "revenue": {
      "__description__": "The engine sums all items in this group to calculate total revenue.",
      "items": {
        "revenue_stream_1": {
          "historical_account_key": null,
          "projection_model": "BS_Driven",
          "drivers": {
            "bs_driven_asset_yield": {
              "baseline": 0.0,
              "justification": null,
              "trends": { "short_term": 0.0, "medium_term": 0.0, "terminal": 0.0 }
            }
          }
        }
      }
    },
    "cost_of_revenue": {
      "items": {
        "cost_of_revenue_1": {
          "historical_account_key": null,
          "projection_model": "Margin_Driven",
          "drivers": {
            "cogs_as_percent_of_revenue": {
              "baseline": 0.0,
              "justification": null,
              "trends": { "short_term": 0.0, "medium_term": 0.0, "terminal": 0.0 }
            }
          }
        }
      }
    },
    "operating_expenses": {
      "items": {
        "sga_expense": {
          "historical_account_key": null,
          "projection_model": "Growth_Rate_Driven",
          "drivers": { "sga_expense_growth_rate": { "baseline": 0.0, "justification": null, "trends": { "short_term": 0.0, "medium_term": 0.0, "terminal": 0.0 } } }
        },
        "provision_for_credit_losses": {
          "historical_account_key": null,
          "projection_model": "Ratio_To_BS_Item",
          "drivers": { "ratio_target_account": "balance_sheet.accounts_receivable.items.main_receivables", "provision_rate": { "baseline": 0.0, "justification": null, "trends": { "short_term": 0.0, "medium_term": 0.0, "terminal": 0.0 } } }
        }
      }
    },
    "depreciation_and_amortization": {
      "items": {
        "depreciation_amortization": {
          "historical_account_key": null,
          "projection_model": "Ratio_To_BS_Item",
          "drivers": { "ratio_target_account": "balance_sheet.property_plant_equipment.items.net_ppe", "depreciation_as_percent_of_ppe": { "baseline": 0.0, "justification": null, "trends": { "short_term": 0.0, "medium_term": 0.0, "terminal": 0.0 } } }
        }
      }
    },
    "interest_expense": {
      "__description__": "Interest is calculated by the engine based on debt balances and system-wide rates. The LLM does not map historical interest; it is reconciled by the engine.",
      "items": {
        "interest_on_revolver": { "projection_model": "Calculated_Interest" },
        "interest_on_scheduled_debt": { "projection_model": "Calculated_Interest" }
      }
    },
    "income_tax": {
      "items": {
        "income_tax_expense": {
          "historical_account_key": null,
          "projection_model": "Tax_Rate_Of_EBT",
          "drivers": { "effective_tax_rate": { "baseline": 0.0, "justification": null, "trends": { "short_term": 0.0, "medium_term": 0.0, "terminal": 0.0 } } }
        }
      }
    }
  },

  "balance_sheet": {
